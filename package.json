{
  "name": "@meinefinsternis/react-horizontal-date-picker",
  "version": "1.0.1",
  "private": false,
  "description": "A simple component that allows the user to choose a date from a scrollable monthly view.",
  "homepage": "https://github.com/meinefinsternis/react-horizontal-datepicker",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "postbuild": "node postbuild.js",
    "build": "vite build",
    "lint": "eslint . --ext ts --ext tsx",
    "dev": "vite",
    "test": "jest",
    "types": "tsc --pretty --noEmit",
    "format": "prettier --check .",
    "test:update": "npm run test -- --u",
    "test:watch": "npm run test -- --watch",
    "prepare": "husky install",
    "release": "standard-version",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meinefinsternis/react-horizontal-datepicker"
  },
  "bugs": {
    "url": "https://github.com/meinefinsternis/react-horizontal-datepicker/issues"
  },
  "keywords": [
    "react",
    "datepicker",
    "swipeable-datepicker",
    "calendar",
    "datetime",
    "swipeable-calendar",
    "range datepicker",
    "react range datepicker",
    "horizontal-calendar"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "browserslist": [
    "> 1%",
    "IE 10"
  ],
  "author": "meinefinsternis",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.0.3",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jest": "^29.0.3",
    "jest-css-modules": "^2.1.0",
    "jest-environment-jsdom": "^29.1.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.1",
    "vite-plugin-css-injected-by-js": "^2.1.0",
    "vite-plugin-sass-dts": "^1.1.41"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "ts-curry": "^1.0.4"
  }
}
